<div class="d-flex w-100 px-5 gap-5 flex-wrap justify-content-center">
    <% asset_list.forEach(function(item, index){ %>
    <div class="asset-div p-4 text-center shadow" style="background-color: <%= item.color %>">
        <img class="asset-icon p-1 mb-2" src="images/<%= item.type %>.png" alt="">
        <p><%= item.name %></p><p><%= item.money %>원</p>
    </div>
    <% }) %>
    <div id="open_modal_btn" class="asset-div p-4 text-center shadow" style="background-color: #DDDDDD"">
        <img class="asset-icon p-1 mb-2" src="images/add.png" alt="">
        <p class="my-3">자산 추가</p>
    </div>
</div>

<div id="add_asset_modal" class="modal fade">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border">
        <button id="close_modal_btn" type="button" class="btn-close p-3" aria-label="Close"></button>
        <form id="add_asset_form" class="d-flex flex-wrap p-5 mx-5 gap-3" method="post">
            <input type="text" name="name" class="form-control" placeholder="이름" required>
            <select name="type" id="asset-type" class="form-select border" required>
                <option value="">--- 자산 형태 선택 ---</option>
                <option value="0">통장</option>
                <option value="1">카드</option>
                <option value="2">간편결제</option>
            </select>
            <input id="input_money" type="text" name="money" class="form-control" placeholder="금액" required>
            <div class="d-flex w-100 justify-content-center gap-3 select-scale">
                <% asset_color.forEach( (item, index) => { %>
                    <input type="radio" name="color" value="<%=item%>" id="color_<%= index %>" class="btn-check" reequired>
                    <label class="btn p-2" for="color_<%=index%>" style="background-color:<%=item%>"></label>
                <% }) %>
            </div>
            <input type="submit" class="btn my-3 mx-auto" value="추가">
        </form>
    </div>
    </div>
  </div>
</div>
  
<script type="text/javascript" src="/js/asset.js"></script>